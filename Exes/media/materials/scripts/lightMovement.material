material QueryArea
{
	technique
	{
		pass
		{
			
		 lighting off
		 depth_write off
		 depth_check off
		 colour_write off
		}
	}
}

material QueryVisible
{
	technique
	{
		pass
		{
			
		 lighting off
		 depth_write off
		 depth_check on
		 colour_write off
		}
	}
}

material Flare
{
	technique
	{
		pass
		{
			lighting off
			scene_blend add
			depth_write off
			diffuse vertexcolour

			texture_unit
			{
				texture flare.png
			}
		}
	}
}
